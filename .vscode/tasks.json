{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OpenGL Project",
      "type": "shell",
      "command": "g++",
      "args": [
        "src/main.cpp",
        "src/glad.c",
        "-Iinclude",
        "-o",
        "main.exe",
        "-lopengl32",
        "-lglfw3",
        "-lgdi32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}